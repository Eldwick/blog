<div class="banner_show">
<h1>Resolving my Deltas</h1>
</div>
<div class="container">
  <article>

    <h2>
      <%= @post.title %>
    </h2>
    Posted <%= @post.time_format(@post.created_at)%>
    <div class='post_info'>
      Related to <% @post.categories.each do |category| %>
        <%= link_to category.name, category_path(category.name) %>
      <% end %>
    </div>
    <p>
      <%= @post.body %>
    </p>
  </article>
  <div class="comments">
  <h3>Comments</h3>
    <% @post.comments.each do |comment| %>
      <div class="comment">
        <div class="comment_author"><%= comment.author %></div>
        <p><%= comment.body %></p>
      </div>
    <% end %>
  <%= render "comments/form" %>
  </div>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>